@page "/"
@using System.Globalization
@inject GamesClient GamesClient

<PageTitle>Game Catalog</PageTitle>

<div class="mt-2">
    <a class="btn btn-primary" role="button" href="/editgame">New Game</a>
</div>

@if (_games is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="table-dark">
        <th>Id</th>
        <th>Name</th>
        <th>Genre</th>
        <th class="text-end">Price</th>
        <th>Release Date</th>
        <th></th>
        </thead>
        <tbody>
        @foreach (var game in _games)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
                <td>@game.Genre</td>
                <td class="text-end">@game.Price.ToString("C2", CultureInfo.GetCultureInfo("en-US"))</td>
                <td>@game.ReleaseDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-primary me-2" role="button" href="/editgame/@game.Id">
                            <i class="bi bi-pencil"></i></a>
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(@game)">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                    <DeleteGame Game="@game"/>
                </td>
            </tr>
        }
        </tbody>

    </table>
}

@code
{
    private GameSummary[]? _games;

    protected override void OnInitialized()
    {
        _games = GamesClient.GetGames();
    }

    private string GetDeleteModalId(GameSummary game)
    {
        return $"#{DeleteGame.GetModalId(game)}";
    }
}
